@model IhaleIcerigiDTO

<div class="container-fluid pb-5 pt-4">

      <div class="mx-auto pb-5">
        <h1 class="h3 mb-0 text-center">@Model.AracIhaleBilgisi.IhaleAdi</h1>
    </div>

    <div class="row">
        <div class="col-12">

            <div id="carouselExampleControls" class="carousel slide w-50 mx-auto" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.AracFoto.AracFoto1" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.AracFoto.AracFoto2" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.AracFoto.AracFoto3" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.AracFoto.AracFoto4" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.AracFoto.AracFoto5" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <div class="col-lg-12 col-md-12 mx-auto pt-4">

                <div class="mt-3">

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-success">Araç Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">

                                <table class="table table-bordered table-secondary" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Marka</th>
                                            <th>Model</th>
                                            <th>Motor Gücü</th>
                                            <th>Motor Hacmi</th>
                                            <th>Km Bilgisi</th>
                                            <th>Gövde Tipi</th>
                                            <th>Renk</th>
                                            <th>Vites Tipi</th>
                                            <th>Yakit Tipi</th>
                                            <th>Şirket</th>
                                            <th>Fiyat</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        
                                            <tr>
                                                <td>@Model.AracBilgisi.Marka</td>
                                                <td>@Model.AracBilgisi.Model</td>
                                                <td>@Model.AracDetayBilgisi.MotorGucu</td>
                                                <td>@Model.AracDetayBilgisi.MotorHacmi</td>
                                                <td>@Model.AracDetayBilgisi.KmBilgisi</td>
                                                <td>@Model.AracDetayBilgisi.GovdeTip</td>
                                                <td>@Model.AracDetayBilgisi.Renk</td>
                                                <td>@Model.AracDetayBilgisi.VitesTip</td>
                                                <td>@Model.AracDetayBilgisi.YakitTip</td>
                                                <td>@Model.KurumsalAracDetayBilgisi.Sirket</td>
                                                <td>@Model.KurumsalAracDetayBilgisi.Fiyat</td>
                                            </tr>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3 pb-4">

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">İhale Bilgileri</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">

                                <table class="table table-bordered table-secondary" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>İhalenin Adı</th>
                                            <th>Kaydedilen Tarih</th>
                                            <th>Başlangıç Tarihi</th>
                                            <th>Bitiş Tarihi</th>
                                            <th>Başlangıç Saati</th>
                                            <th>Bitiş Saati</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td>@Model.AracIhaleBilgisi.IhaleAdi</td>
                                            <td>@Model.AracIhaleBilgisi.KaydetmeTarihi</td>
                                            <td>@Model.AracIhaleBilgisi.IhaleBaslangicTarihi</td>
                                            <td>@Model.AracIhaleBilgisi.IhaleBitisTarihi</td>
                                            <td>@Model.AracIhaleBilgisi.IhaleBaslangicSaati</td>
                                            <td>@Model.AracIhaleBilgisi.IhaleBitisSaati</td>
                                            <td>
                                                <a asp-action="IhaleyeKatil" asp-controller="AracIlanlari" asp-route-aracID="@Model.AracBilgisi.AracID" class="btn btn-success mx-auto">Katıl</a>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-right pb-4 d-flex pt-4">
                    <a asp-action="Index" asp-controller="AracIlanlari" class="btn btn-success ms-auto">Geri Dön</a>
                </div>
        </div>
    </div>
</div>