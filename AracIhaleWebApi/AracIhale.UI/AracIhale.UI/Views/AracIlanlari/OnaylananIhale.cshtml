@model OnaylananIhaleBilgiDTO

<div class="container">

    @using (Html.BeginForm("IhaleBilgisi", "AracIlanlari", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow mt-5" style="margin-top:20%; margin: 0 20%">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">İhale Onay Bilgileri</h6>
            </div>


            <div class="card-body row px-4">

                <div class="col-md-7 p-2">
                    <div class="card mb-2 border-right-0 shadow border-left-primary">
                        <div class="card-body d-flex">
                           <span class="mr-2 text-primary text-uppercase">Onaylanan Kullanıcı :</span>
                        <span>@Model.Kullanici</span>
                        </div>
                    </div>
                </div>


                <div class="col-md-7 p-2">
                    <div class="card mb-2 border-right-0 shadow border-left-primary">
                        <div class="card-body d-flex">
                            <span class="mr-2 text-primary text-uppercase">İhalenin Satış Fiyatı : </span>
                            <span>@Model.Fiyat</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-7 p-2">
                    <div class="card mb-2 border-right-0 shadow border-left-primary">
                        <div class="card-body d-flex">
                            <span class="mr-2 text-primary text-uppercase">İhale Araç ID : </span>
                            <span>@Model.AracID</span>
                        </div>
                    </div>
                </div>

            </div>


            <div class="col-md-12">
                <div class="text-right pb-4 pt-4 pe-5 d-flex">
                    <a asp-action="IhaleDetay" asp-controller="AracIlanlari" class="btn btn-success ms-auto">Geri Dön</a>
                </div>
            </div>

        </div>
    }
</div>
