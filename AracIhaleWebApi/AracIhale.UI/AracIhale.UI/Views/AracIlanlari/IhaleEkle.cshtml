@{
}
@model DBAracIhaleDTO

<div class="container-fluid pb-5 pt-4">

    <!-- Page Heading -->
    <div class="mx-auto mb-4">
        <h1 class="h3 mb-0 text-center">İhale Ekle</h1>
    </div>

    <!-- Content Row -->

    <div class="row">

        <!-- Area Chart -->
        <div class="col-lg-12 col-md-12 mx-auto">
            <div class="card shadow mb-4">
             
                <!-- Card Body -->
                <div class="card-body mx-auto">

                    @using (Html.BeginForm("IhaleEkle", "AracIlanlari", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mt-3">

                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">İhale Bilgilerini Ekle</h6>
                                </div>
                                <div class="card-body">


                                    <div class="row justify-content-center align-items-center py-2">
                                        <div class="col-4">
                                            <div class="d-flex flex-column p-2">
                                                <span class="text-dark mb-2 text-center font-weight-bold">İhale Adı</span>
                                                @Html.TextBoxFor(a => a.IhaleAdi, new { @class = "mx-auto p-1 form-control" })
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="d-flex flex-column p-2">
                                                <span class="text-dark mb-2 mx-auto text-center font-weight-bold">Bireysel/Kurumsal</span>
                                                @Html.DropDownListFor(a => a.RolID, Model.Roller, "Seçiniz", new { @class = "btn btn-outline-dark  mx-auto form-control w-100", @type = "button" })
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="d-flex flex-column p-2">
                                                <span class="text-dark mb-2 text-center font-weight-bold mx-auto">Şirketler</span>
                                                @Html.DropDownListFor(a => a.SirketID, Model.Sirketler, "Seçiniz", new { @class = "btn btn-outline-dark  mx-auto form-control w-100", @type = "button" })
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row justify-content-center align-items-center py-2">
                                        <div class="col-4">
                                            <div class="d-flex flex-column p-2">
                                                <span class="text-dark mb-2 text-center font-weight-bold mx-auto">Statü</span>
                                                @Html.DropDownListFor(a => a.IhaleStatuID, Model.IhaleStatuleri, "Seçiniz", new { @class = "btn btn-outline-dark  mx-auto form-control w-100", @type = "button" })
                                            </div>
                                        </div>
                                         <div class="col-4">
                                            <div class="d-flex flex-column p-2">
                                                <span class="text-dark mb-2 text-center font-weight-bold">İhale Başlangıç Tarihi</span>
                                                @Html.TextBoxFor(a => a.IhaleBaslangicTarihi, new { @class = "mx-auto p-1 form-control", type = "date" })
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="d-flex flex-column p-2">
                                                <span class="text-dark mb-2 text-center font-weight-bold">İhale Başlangıç Saati</span>
                                                @Html.TextBoxFor(a => a.IhaleBaslangicSaati, new { @class = "mx-auto p-1 form-control", type = "time" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row justify-content-start align-items-center py-2">
                                        <div class="col-4">
                                            <div class="d-flex flex-column p-2">
                                                <span class="text-dark mb-2 text-center font-weight-bold">İhale Bitiş Tarihi</span>
                                                @Html.TextBoxFor(a => a.IhaleBitisTarihi, new { @class = "mx-auto p-1 form-control", type = "date"})
                                            </div>
                                        </div>
                                            <div class="col-4">
                                            <div class="d-flex flex-column p-2">
                                                <span class="text-dark mb-2 text-center font-weight-bold">İhale Bitiş Saat</span>
                                                @Html.TextBoxFor(a => a.IhaleBitisSaati, new { @class = "mx-auto p-1 form-control", type = "time" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      <div class="text-right d-flex">
                            <input type="submit" class="btn btn-success ms-auto font-weight-bold me-4" value="Kaydet" />
                            <a asp-action="IhaleListele" asp-controller="AracIlanlari" class="btn btn-success">Geri Dön</a>
                      </div>
                    }
            </div>
        </div>
    </div>
</div>
